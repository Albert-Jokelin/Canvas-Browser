{
    "name": "canvas-browser",
    "version": "1.0.0",
    "type": "module",
    "description": "AI-powered browser with GenTabs - transforms browsing into interactive apps",
    "main": "dist-electron/main/index.js",
    "author": {
        "name": "Canvas Team",
        "email": "canvas@example.com"
    },
    "homepage": "https://github.com/canvas-browser/canvas",
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "vite build && electron-builder",
        "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
        "electron:build": "vite build && electron-builder --linux",
        "test": "vitest"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.33.0",
        "@babel/standalone": "^7.26.5",
        "better-sqlite3": "^11.7.0",
        "lucide-react": "^0.469.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-markdown": "^9.0.1",
        "recharts": "^2.15.0"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.12",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.2",
        "electron": "^33.3.1",
        "electron-builder": "^25.1.8",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.17",
        "vite": "^6.0.5",
        "vite-plugin-electron": "^0.28.8",
        "vite-plugin-electron-renderer": "^0.14.6",
        "wait-on": "^8.0.1",
        "vitest": "^1.2.0",
        "jsdom": "^24.0.0",
        "@testing-library/react": "^14.1.2",
        "@testing-library/jest-dom": "^6.2.0",
        "@testing-library/user-event": "^14.5.2"
    },
    "build": {
        "appId": "com.canvas.browser",
        "productName": "Canvas",
        "directories": {
            "output": "release"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "assets/icons",
            "category": "Network",
            "maintainer": "canvas@example.com"
        }
    }
}